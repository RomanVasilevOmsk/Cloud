.video
  width 100%

  &__title
    text-align center
    font-size 28px
    color #343434
    font-weight 800
    margin-top 31px

  &__content
    max-width 951px
    margin 92px auto 0 auto

  &__link
    background-color #2980b9
    font-size 14px
    min-height 27px
    min-width 140px
    padding 6px 0px 0 0px
    margin-right 12px
    text-align center
    text-decoration none
    color #fff
    text-transform uppercase
    float right
    transition-duration 0.5s

    &:hover
      transition-property background-color
      transition-duration 0.5s
      background-color #005287