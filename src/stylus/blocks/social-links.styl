.social-links
  margin 5px 0 0 0
  padding 0
  list-style none

  &__item
    width 30px
    height 30px
    border-radius 30px
    float left
    margin-right 12px

    &:hover
      background-color #30aafa
      transition-property background-color
      transition-duration 0.5s

  &__link
    display block
    width 100%
    height 100%
    background-repeat no-repeat

    &:hover
        color #000

    &--twitter
      background-position 7px 7px
      background-image: url("data:../images/base64/header-ico/header-logo-twitter.png;base64,");

    &--facebook
      background-position 6px 5px
      background-image: url("data:../images/base64/header-ico/header-logo-facebook.png;base64,");

    &--google
      background-position 6px 6px
      background-image: url("data:../images/base64/header-ico/header-logo-google.png;base64,");