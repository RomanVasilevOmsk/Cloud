.user-top-menu
  margin 9px 0 0 0
  padding 0
  list-style none

  &__item

    float left
    margin-left 32px


  &__link
    color #676767
    text-decoration none
    font-size 13px

    &:hover
      text-decoration underline

    &:before
      content ""
      display inline-block
      width 10px
      height 12px
      margin-right 5px

    &--sign-up:before
      background-image: url("data:../images/base64/user-top-menu-ico/user-top-menu-sign-up-ico.png;base64,");

    &--login:before
      background-image: url("data:../images/base64/user-top-menu-ico/user-top-menu-login-ico.png;base64,");
